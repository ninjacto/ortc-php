{
    "name": "ninjacto/realtime",
    "type": "library",
    "description": "PHP SDK wrapper for ORTC (Realtime pub/sub framework from RealTime.co)",
    "keywords": [
        "ninjacto",
        "RealTime",
        "realtime.co",
        "ORTC",
        "API",
        "Wrapper",
        "XRTML",
        "pub-sub",
        "push",
        "publish",
        "real-time"
    ],
    "homepage": "https://github.com/ninjacto/ortc-php",
    "license": "MIT",
    "authors": [
        {
            "name": ":Ramin Farmani",
            "email": ":ramin.farmani@gmail.com",
            "homepage": "http://www.ninjacto.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.4|~7.0",
        "guzzlehttp/guzzle": "~6.2",
        "ramsey/uuid": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3",
        "mockery/mockery": "~0.9."
    },
    "autoload": {
        "psr-4": {
            "ninjacto\\OrtcPhp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ninjacto\\OrtcPhp\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
